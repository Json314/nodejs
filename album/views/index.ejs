<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>我的相册</title>
    <link rel="stylesheet" href="./bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="./index.css">
  </head>
  <body>
    <div class="container">
      <br>
      <h3 class="text-center">我的相册</h3>
      <br>
      <ol class="breadcrumb">
        <li><a href="#">首页</a></li>
        <!-- <li><a href="#">Library</a></li>
        <li class="active">Data</li> -->
      </ol>
      <div class="album-list row">
        <% for(var i=0;i<list.length;i++){ %>
          <div class="col-sm-3">
            <a class="item" href="/albums/<%= list[i] %>">
              <img class="dir" src="./images/dir.jpg" alt="">
              <p class="text-center"><%= list[i] %></p>
            </a>
          </div>
        <% } %>
        <div class="col-sm-3">
          <button type="button" class="btn btn-primary" id="add-album">添加相册</button>
        </div>
      </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">添加相册</h4>
          </div>
          <div class="modal-body">
            <form action="/add_from" method="post" class="form-horizontal" id="add-album-form">
              <div class="form-group">
                <label for="name" class="col-sm-2 control-label">相册名</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="name" id="name" placeholder="相册名">
                </div>
              </div>
              <!-- <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <button type="submit" class="btn btn-default">Sign in</button>
                </div>
              </div> -->
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            <button type="button" class="btn btn-primary" id="submit-album">提交</button>
          </div>
        </div>
      </div>
    </div>
    <script src="./jquery-3.2.1.min.js"></script>
    <script src="./bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript">
      $('#add-album').on('click', function(){
        $('.modal').modal('show');
      });
      $('#submit-album').on('click', function(){
        $('#add-album-form')[0].submit();
      });
    </script>
  </body>
</html>
